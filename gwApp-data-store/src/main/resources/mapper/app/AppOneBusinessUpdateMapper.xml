<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sse.sseapp.mapper.app.AppOneBusinessUpdateMapper">

    <select id="selectByStatus" resultType="com.sse.sseapp.domain.app.AppOneBusinessUpdate">
        select id,
               business_type,
               nav_id,
               create_time,
               status,
               mobile
        from app_one_business_update
        where status = '0'
        order by create_time desc
    </select>


    <update id="updateStatus" parameterType="com.sse.sseapp.domain.app.AppOneBusinessUpdate">
        update app_one_business_update
        set status = '1'
        where id = #{id}
    </update>

</mapper>