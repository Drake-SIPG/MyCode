<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sse.sseapp.mapper.app.AppBondSubscriptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sse.sseapp.domain.app.AppBondSubscription">
        <id column="bs_id" property="bsId" />
        <result column="mobile" property="mobile" />
        <result column="user_id" property="userId" />
        <result column="bond_code" property="bondCode" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <select id="getUserBondSubscription" resultType="String">
        select bond_code
        from app_bond_subscription
        where user_id = #{userId}
    </select>

    <select id="getMobile" resultType="String">
        select mobile
        from app_bond_subscription
        where bond_code = #{bondCode}
    </select>

    <delete id="cancelBondSubscription" parameterType="com.sse.sseapp.domain.app.AppBondSubscriptionPo">
        delete from app_bond_subscription where user_id = #{userId}
        and (bond_code in
        <foreach item="bondCode" collection="bondCode" open="(" separator="," close=")">
            #{bondCode}
        </foreach>)
    </delete>

</mapper>
